{% extends 'base.html.twig' %}

{% block title %}Versement{% endblock %}

{% block body %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        /* CSS personnalis√© pour le PDF */
        body { font-family: Arial, sans-serif; }
        .header { color: #333; }
        table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        }
        @Page {
                    footer {
                       position: fixed;
                        bottom: 0cm;
                        left: 0cm;
                        right: 0cm;
                        height: 2cm;
                        text-align: center;
                    }
                }
    </style>
</head>
<body>
<div class="table-responsive">
    <table class="table table-bordered" id="tableactif" width="100%" cellspacing="0" data-page-length='50' >
        <thead>
            <tr>
                <th colspan="7" style="text-align: center;">Versement du {{ 'now' | date("Y-m-d")}}</th>
            </tr>
            <tr>
                <th style="text-align: center;">Id</th>
                <th style="text-align: center;">Client</th>
                <th  style="text-align: center;">Montant</th>
                <th  style="text-align: center;">OM/MOMO</th>
                <th  style="text-align: center;">Banque</th>
                <th  style="text-align: center;">Description</th>
                <th  style="text-align: center;">Date</th>
            </tr>
        </thead>
        <tbody>
            {% for versement in versements %}
                <tr>
                    <td style="">{{ versement.id }}</td>   
                    <td style="">{{ versement.client.nom }}</td>
                    <td style="">{{ versement.montant }}</td>
                    <td style="">{{ versement.om }}</td>
                    <td style="">{{ versement.banque }}</td>
                    <td style="">{{ versement.description }}</td>
                    <td> {{versement.createdAt | date("Y-m-d") }} </td>        
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

</body>
</html>
{% endblock %}