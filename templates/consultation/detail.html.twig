{% extends 'base.html.twig' %}

{% block title %}Consultation!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template-->
    <link href="../../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <style>
        .ligne-verticale {
        width: 2px;
        height: 100px;
        border: none; /* Supprime la bordure par défaut */
        border-left: 2px solid black;
        transform: rotate(90deg); /* Rotation de 90 degrés pour créer une ligne verticale */
        }
    </Style>

</head>

<body class="bg-gradient-success">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-12">
                        <div class="form-group row card-header py-3">
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary">Fiche de Consultation</h6>     
                                </div>
                                <div class="col-sm-2">
                                    <a href="{{ path('app_home_dashboardA', {'id': tempagence.id}) }}" class="btn btn-primary">
                                    <i class="fa fa-home"></i>Home</a> 
                                </div>
                                <div class="col-sm-2"> 
                                    <a href="{{ path('app_consultation_list')}}" class="btn btn-success">
                                    <i class="fa fa-list"></i>
                                     Liste</a>             
                                </div>
                                <!--<div class="btn btn-warning"><i class="fa fa-arrow-left"></i> Retour</div>  -->  
                        </div> 
                        <div class="p-5">
                            
                            <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    </div>
                                    <div class="col-sm-6">
                                    Date: <p>{{consultations.createtAd | date('Y-m-d')}}</p>
                                    </div>
                                    
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        Nom : <p class="text-lg font-weight-bold"><strong>{{ consultations.nom}}</strong></p>
                                    </div>
                                    <div class="col-sm-6">
                                      Vaccin:  <p class="text-lg font-weight-bold">{{consultations.vaccin}}</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    Age:  <p class="text-lg font-weight-bold">{{consultations.age}}</p>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    Vermifuge:  <p class="text-lg font-weight-bold">{{consultations.vermufuge}}</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        Sexe: <p class="text-lg font-weight-bold">{{consultations.sexe}}</p>
                                    </div> 
                                    <div class="col-sm-2 mb-3 mb-sm-0">   
                                        Poid: <p class="text-lg font-weight-bold">{{consultations.poid}}</p>
                                    </div>
                                    <div class="col-sm-2 mb-3 mb-sm-0">    
                                        Esperce: <p class="text-lg font-weight-bold">{{consultations.esperce}}</p>
                                    </div>
                                    
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        Regime Alimentaire:<p class="text-lg font-weight-bold">{{consultations.regime}}</p>
                                    </div>
                                    
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        Race: <p class="text-lg font-weight-bold">{{consultations.race}}</p>
                                    </div>
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        Robe <p class="text-lg font-weight-bold">{{consultations.robe}}</p>
                                    </div>
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        Temperature: <p class="text-lg font-weight-bold">{{consultations.temperature}}</p>
                                    </div>
                                    <div class="col-sm-5 mb-3 mb-sm-0">
                                        Nom du propritaire: 
                                        <p class="text-lg font-weight-bold">{{consultations.client.nom}} Tel : {{consultations.client.telephone}}</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group ">
                                    <div class="col-sm-9 mb-3 mb-sm-0">
                                        Motif de la consultation: <p class="text-lg font-weight-bold">{{consultations.motifConsultation}}</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row ">
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                    Symptomes:<p  class="text-lg font-weight-bold">{{consultations.symtome}}</p> 
                                    </div>
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        Diagnostique:<p class="text-lg font-weight-bold">{{consultations.dianostique}}</p> 
                                    </div>
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        Traitement:<p class="text-lg font-weight-bold">{{consultations.traitement}}</p> 
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        Pronostique:<p class="text-lg font-weight-bold">{{consultations.pronostique}}</p> 
                                    </div>
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        Prophylaxe:<p class="text-lg font-weight-bold">{{consultations.prophylaxe}}</p> 
                                    </div>
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        Indication:<p class="text-lg font-weight-bold">{{consultations.indication}}</p> 
                                    </div>
                                    
                                </div>
                                <hr>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-sm-9 mb-3 mb-sm-0">
                                    Total:<p  class="text-lg font-weight-bold">{{consultations.nomtant}} FCFA</p>
                                    </div>
                                    <div class="col-sm-3 mb-3 mb-sm-0">
                                    <p></p>
                                    </div>
                                </div>
                                <hr>
                                
                            <hr>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->

</body>

</html>

{% endblock %}