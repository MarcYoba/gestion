{% extends 'base.html.twig' %}

{% block title %}Hello ProduitAController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html>
<head>
    <title>Facture</title>
    <style>
        table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        }
        @Page {
                    footer {
                       position: fixed;
                        bottom: 0cm;
                        left: 0cm;
                        right: 0cm;
                        height: 2cm;
                        text-align: center;
                    }
                }
</style>
</head>
<body>

<br><br><br> 
    <table style="width:100%">
        <thead>
        <tr>
            <th colspan="4" align="center">Bonde de commande des produit </th>
        </tr>
        <tr>
            <th colspan="4" align="center">{{ fournisseur.nom}} : {{ fournisseur.telephone}}</th>
        </tr>
        <tr>
            <th scope="col">Produit</th>
            <th scope="col">Quantite contoire</th>
            <th scope="col">Quantite Magasin</th>
            <th scope="col">Fournisseur</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for bond  in bondCommande %}
            
                {% if (bond.quantite <= bond.limite) or (bond.quantite == 0) %}
                    <td>{{bond.nom}}</td>
                    <td>{{bond.quantite}}</td>
                    <td>
                        {% for maga in magasins %}
                            {% if maga.produit.nom == bond.nom %}
                                {{maga.quantite}}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td> 
                        {{fournisseur.nom}}      
                    </td>
                {% endif %}
            {% endfor %}
        </tr>
        </tbody>
    </table>
</body>
</html>
{% endblock %}