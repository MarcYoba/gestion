{% extends 'base.html.twig' %}

{% block title %}Retrait!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template-->
    
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    
    <style>
        .drop{
            display: none;
        }
    </style>

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-2 d-none d-lg-block bg-register-image">
                        {% include "navbar.html.twig" %}
                    </div>
                    <div class="col-lg-10">
                        <div class="p-5">
                            
                            <hr>
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4 text-green">Edit Retrait</h1>
                            </div>
                            <form class="user" action="{{path('app_retrait_update')}}" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="retraits_status">Entre le montant</label>
                                        <input type="text" class="form-control form-control-user" name="retraits[{{retraits.id}}][montant]" value="{{retraits.montant}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="retraits_status">Date de enregistrement</label>
                                        <input type="date" class="form-control form-control-user" name="retraits[{{retraits.id}}][createtAt]" value="{{retraits.createtAt | date('Y-m-d')}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="retraits_status">Libelle de compte</label>
                                        <input type="text" class="form-control form-control-user" name="retraits[{{retraits.id}}][libelle]" value="{{retraits.libelle}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="retraits_status"> compte retraits </label>
                                        <input type="text" class="form-control form-control-user" name="retraits[{{retraits.id}}][compte]" value="{{retraits.compte}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="retraits_status">Nom de la Banque</label>
                                        <input type="text" class="form-control form-control-user" name="retraits[{{retraits.id}}][banque]" value="{{retraits.banque}}">
                                    </div>
                                    
                                    
                                    <br>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Enregistrer
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->

</body>
</html>
{% endblock %}
