{% extends 'base.html.twig' %}

{% block title %}Rapport du Anne{% endblock %}

{% block body %}

<!DOCTYPE html>
<html>
<head>
    <title>Facture</title>
    <style>
        table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        }
        @Page {
                    footer {
                       position: fixed;
                        bottom: 0cm;
                        left: 0cm;
                        right: 0cm;
                        height: 2cm;
                        text-align: center;
                    }
                }
</style>
</head>
<body>

<br><br><br> 
<table style="width:100%">
        <thead>
            <tr>
                <th colspan="3" align="center">Somme vente part Mois : {{ annees }}</th>
            </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="col">MOIS </th>
            <th scope="col">année</th>
            <th scope="col">montant</th>
        </tr>
        {% set moi = 1 %}
        {% for vente in ventes %}
            <tr>
                <td>{{ moi }}</td>
                <td>{{ annees }}</td>
                <td>{{ vente }}</td>
                {% set moi = moi +  1 %}
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <br><br><br> 
    <table style="width:100%">
        <thead>
            <tr>
                <th colspan="3" align="center">Somme vente par Semaine : {{annees}}</th>
            </tr>
        </thead>
        <tbody>
        </tr>
            <th scope="col">année </th>
            <th scope="col">semaine</th>
            <th scope="col">montant</th>
        </tr>
        {% for semaine in semains %}
            <tr>
                <td>{{annees}}</td>
                <td>{{semaine[0]}}</td>
                <td>{{semaine[1]}}</td>      
            </tr>
        {% endfor %}
        
        </tbody>
    </table>

</body>
</html>
{% endblock %}