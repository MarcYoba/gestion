{% extends 'base.html.twig' %}

{% block title %}Hello SuiviController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template-->

</head>

<body class="bg-gradient-success">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-12">
                        <div class="p-5">
                        <div class="form-group row card-header py-3">
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary">Fiche de suivi</h6>     
                                </div>
                                <div class="col-sm-2">
                                    
                                    <a href="{{ path('app_home_dashboardA', {'id': tempagence.id}) }}" class="btn btn-primary"> <i class="fa fa-home"></i>Home</a> 
                                </div>
                                <div class="col-sm-2">
                                    <i class="fa fa-list"></i> 
                                    <a href="{{path('app_suivi_list')}}" class="btn btn-success"> Liste</a>             
                                </div>  
                            </div> 
                            {{ form_start(form)}}
                                Information sur le sujet
                                <hr>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    Nom du patient 
                                        {{ form_widget(form.nom)}}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    Nom du propriétaire
                                        {{ form_widget(form.client)}}
                                    </div>
                                </div>
                                Traitement
                                <hr>
                                <div class="form-group row">
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        Date de traitement 
                                        {{ form_widget(form.jour)}}
                                    </div>
                                    <div class="col-sm-5 mb-3 mb-sm-0">
                                        Observation :
                                        {{ form_widget(form.observation)}}
                                    </div>
                                    <div class="col-sm-5 mb-3 mb-sm-0">
                                        Conduite à tenir: 
                                        {{ form_widget(form.conduite)}}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        Montant payé {{ form_widget(form.montant)}}
                                    </div>
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                       Nom du vétérinaire: {{ form_widget(form.docteur)}}
                                    </div>
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                       Date d'enregistrement: {{ form_widget(form.createtAd)}}
                                    </div>
                                </div>
                                <button type="submit" name="submit" id="submit" class="btn btn-success btn-user btn-block">
                                    Enregister
                                </button>
                            {{ form_end(form)}}
                            <hr>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->

</body>

</html>
{% endblock %}
