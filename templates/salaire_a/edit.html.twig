{% extends 'base.html.twig' %}

{% block title %}Hello SalaireController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template-->
    
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    
    <style>
        .drop{
            display: none;
        }
    </style>

</head>

<body class="bg-gradient-success">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-12">
                        <div class="p-5">
                            
                            <hr>
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4 text-green">Edit Paiement salaire</h1>
                            </div>
                            <form class="user" action="{{path('app_salaire_update_a')}}" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <label for="salaire_status">Salaire net</label>
                                        <input type="number" class="form-control form-control-user" name="salaires[{{salaire.id}}][montant]" value="{{salaire.montant}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="salaire_status">Date de paiement</label>
                                        <input type="date" class="form-control form-control-user" name="salaires[{{salaire.id}}][createAt]" value="{{salaire.createtAt | date('Y-m-d')}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="salaire_status">Statut du paiement</label>
                                        <select class="form-control form-select" name="salaires[{{salaire.id}}][satuts]" required>
                                            <option value="en_attente">en_attente</option>
                                            <option value="paye">paye</option>
                                            <option value="erreur">erreur</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="salaire_status"> Employer </label>
                                        <select  name="salaires[{{salaire.id}}][employer]"  class="form-control form-select" size="5"  multiple aria-label="multiple select " required >
                                            {% for row in employer %}
                                                <option value="{{ row.user.username }}">{{ row.user.username }}</option>
                                            {% endfor %}                  
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="salaire_status">Salaire Brut</label>
                                        <input type="number" class="form-control form-control-user" name="salaires[{{salaire.id}}][salaireBrut]" value="{{salaire.salaireBrut}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="salaire_status">Cotisation sociales</label>
                                        <input type="number" class="form-control form-control-user" name="salaires[{{salaire.id}}][cotisationSociales]" value="{{salaire.cotisationSociales}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="salaire_status">Impots</label>
                                        <input type="number" class="form-control form-control-user" name="salaires[{{salaire.id}}][impots]" value="{{salaire.impots}}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="salaire_status">Type paiement</label>
                                        <select class="form-control form-select" name="salaires[{{salaire.id}}][type]" required>
                                            <option value="CASH">CASH</option>
                                            <option value="CREDIT">CREDIT</option>
                                            <option value="MOBILE">MOBILE</option>
                                            <option value="BANQUE">BANQUE</option>
                                        </select>
                                    </div>
                                    <br>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Enregistrer
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->

</body>
</html>
{% endblock %}
