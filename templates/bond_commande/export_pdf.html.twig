{% extends 'base.html.twig' %}

{% block title %}Hello ProduitAController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html>
<head>
    <title>Facture</title>
    <style>
        table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        }
        @Page {
                    footer {
                       position: fixed;
                        bottom: 0cm;
                        left: 0cm;
                        right: 0cm;
                        height: 2cm;
                        text-align: center;
                    }
                }
</style>
</head>
<body>

<br><br><br> 
    <table style="width:100%">
        <thead>
         <tr><th colspan="3" align="center">Bonde de commande des produit </th></tr>
        </thead>
        <tbody>
        <tr>
            <th scope="col">Produit</th>
            <th scope="col">Quantite</th>
            <th scope="col">Fournisseur</th>
        </tr>
        {% for bond  in bondCommandes %}
            <tr>
                <td>{{bond.nom}}</td>
                <td>{{bond.quantite}}</td>
                <td>
                    {% for achat in achats %}
                        {% if achat.produit == bond.nom %}
                            {{achat.forunisseur.nom}}
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</body>
</html>
{% endblock %}