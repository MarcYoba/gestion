{% extends "base.html.twig" %}

{% block title %}Hello RapportController {% endblock %}

{% block body %}
<body id="page-top" class="bg-light"> 
    <div class="container mt-5">

        <div class="row">
            <div class="col-lg-12">
                <div class="text-center mb-4">
                    <h1 class="h3 text-gray-800">Export des bons de commande par fournisseur</h1>
                    <a class="font-weight-bold text-success" href="{{ path('app_home_dashboard', {'id': id}) }}">
                        <i class="fas fa-arrow-circle-left"></i> Retour au Tableau de Bord
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            {% for forunisseur in fournisseurs %}
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Bons de Commande
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{forunisseur.nom}}<br>{{forunisseur.telephone}}</div>
                                </div>
                                <div class="col-auto">
                                    <a href="{{ path('app_bond_commande_liste_fourisseur_id',{'id':forunisseur.id})}}">
                                        <button type="button" class="btn btn-success btn-sm">
                                            <i class="fas fa-print fa-2x text-white-50"></i> PDF
                                        </button>
                                    </a>
                                    <a href="{{ path('app_bond_command_list_fournisseur_id_excel',{'id':forunisseur.id})}}">
                                        <button type="button" class="btn btn-primary btn-sm">
                                            <i class="fas fa-print fa-2x text-white-50"></i> Excel
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                    Bons de Commande
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">Autre Fournisseur</div>
                            </div>
                            <div class="col-auto">
                                <a href="{{ path('app_bond_commande_export_pdf')}}">
                                    <button type="button" class="btn btn-danger btn-sm">
                                        <i class="fas fa-print fa-2x text-white-50"></i> PDF
                                    </button>
                                </a>
                                <a href="{{ path('app_bond_commande_liste_fourisseur_excel')}}">
                                    <button type="button" class="btn btn-primary btn-sm">
                                        <i class="fas fa-print fa-2x text-white-50"></i> Excel
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Telecharger le fichier Excel pour la mise a jour des bons de commande
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">Mise a jour</div>
                            </div>
                            <div class="col-auto">
                            <form class="user" action="{{path('app_bond_commande_update')}}" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="file" class="form-control form-control-user" id="ficher"
                                            name="ficher" required>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="submit" class="form-control form-control-user btn btn-success" placeholder="Telecharger" >
                                    </div>
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-12 col-md-6 mb-12">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <form class="user" action="{{ path('app_bond_commande_limite')}}" method="post" enctype="multipart/form-data">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Ajouter  manuellement Fournisseur  
                                    </div>
                                    <div class="h5 mb-1 font-weight-bold text-gray-800">Ajouter  manuellement Fournisseur</div>
                                    <div class="form-group row no-gutters">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <select id="fournisseur"  name="fournisseur" class="form-control form-select"  size="10" multiple aria-label="multiple select" required>
                                                {% for fournisseur in fournisseurs %}
                                                    <option value="{{ fournisseur.id }}">{{ fournisseur.nom }}</option>
                                                {% endfor %}             
                                            </select>
                                        </div>
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <select id="produit"  name="produit"   class="form-control form-select"  size="10" multiple aria-label="multiple select" required>
                                                {% for produit in produits %}
                                                    <option value="{{ produit.id }}">{{ produit.nom }}</option>
                                                {% endfor %}             
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-info btn-sm">
                                        <i class="fas fa-calendar-alt fa-2x text-white-50"></i> Enregistrer
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        </div>

</body>

</html>
{% endblock %}