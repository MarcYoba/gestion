{% extends 'base.html.twig' %}

{% block title %}Hello InventaireCaisseAController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <style>
        .drop{
            display: none;
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbarA.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2  text-primary">Declaration Inventaire</h1>
                    <hr>
                    <!-- Content Row -->
                    <div class="row">

                        <div class="col-xl-12 col-lg-10">

                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Declaration Inventaire Caisse</h6>
                                    
                                </div>
                                <br>
                                {{ form_start(form)}}
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label>Vente du jour</label>
                                        {{form_widget (form.vente)}}
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Valeur de la caisse</label>
                                        {{ form_widget (form.caisse) }}
                                    </div>
                                </div> 
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label>Difference</label>
                                        {{ form_widget(form.ecart)}}
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Date</label>
                                        {{ form_widget(form.createtAt)}}
                                    </div>
                                    <div class="col-sm-12">
                                        <label>Justification</label>
                                        {{ form_widget(form.justificatif)}}
                                    </div>
                                </div>   
                                <hr>
                                <span id="enregistrement">
                                <button type="submit" name="caiss" id="caiss" class="btn btn-primary btn-user btn-block">
                                    Enregistrer
                                </button>
                                </span>
                            {{form_end(form)}}

                            </div>
                        </div>
                    </div> 
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ 'now' | date("Y-m-d")}}</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <script>
        const  inputQuantite = document.getElementById("inventaire_caisse_a_caisse");
        inputQuantite.addEventListener('input',calculeechar);

      function calculeechar() {
        let vente = parseFloat(document.getElementById("inventaire_caisse_a_vente").value);
        let caisse = parseFloat(document.getElementById("inventaire_caisse_a_caisse").value);
        document.getElementById("inventaire_caisse_a_ecart").value = caisse - vente ;
      }   
    </script>
</body>

</html>
{% endblock %}
