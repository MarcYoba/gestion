{% extends 'base.html.twig' %}

{% block title %}Actif{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template -->
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbar.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Bilan</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Structure du bilan</h6>
                            <br>
                            <div class=" form-group row">
                                <div class="col-md-2">
                                <button class="btn btn-info btn-user btn-block">Bilan au </button>
                                    <select class="form-control" id="annee" name="annee" onchange="AnneBilan()">
                                        {% for currentYear in 2022..2040 %}
                                            <option value="{{ currentYear }}"> {{ currentYear }} </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <button class="btn btn-primary btn-user" onclick="UpdateActif()">Mise à jour de l'actif</button>
                                </div>
                                <div class="col-md-3">
                                    <a class="btn btn-primary btn-user"  href="{{ path('app_actif') }}"><i class="fas fa-plus"></i> actif</a>
                                </div>
                                <div class="col-md-3">
                                    <a class="btn btn-warning btn-user"  href="{{ path('app_depense_actif') }}"><i class="fas fa-plus"></i> Edite</a>
                                </div>
        
                                
                            </div>
                        </div>
                        <span id="message"><h3 class="text-success">Veuillez mettre votre Actif à jour</h3></span>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="tableactif" width="100%" cellspacing="0" data-page-length='50' >
                                    <thead>
                                        <tr>
                                            <th rowspan="2" style="text-align: center;">REF</th>
                                            <th rowspan="2" style="text-align: center;">Actif</th>
                                            <th colspan="4" style="text-align: center;" id="date">{{ date}}</th>
                                            <th style="text-align: center;">EXERCICE N-1</th>
                                        </tr>
                                        <tr>
                                            <th>BRUT</th>
                                            <th>AMORT/PROV</th>
                                            <th>NET</th>
                                            <th>Operation</th>
                                            <th>NET</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>REF</th>
                                            <th>Actif</th>
                                            <th>BRUT</th>
                                            <th>AMORT/PROV</th>
                                            <th>NET</th>
                                            <th>Operation</th>
                                            <th>NET</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% for actif in Actifs %}
                                            <tr>
                                            {% if actif.REF == 'AD' or actif.REF == 'AI' or  actif.REF == 'AZ' or actif.REF == 'BK' or actif.REF == 'BT' 
                                            or actif.REF == 'Bz' %}
                                                <td style="color: blue;">{{ actif.REF }}</td>   
                                                <td style="color: blue;">{{ actif.libelle }}</td>
                                                <td style="color: blue;">{{ actif.brut }}</td>
                                                <td style="color: blue;">{{ actif.amortissement }}</td>
                                                <td style="color: blue;">{{ actif.net}}</td> 
                                            {% else %}
                                                <td style="">{{ actif.REF }}</td>   
                                                <td style="">{{ actif.libelle }}</td>
                                                <td style="">{{ actif.brut }}</td>
                                                <td style="">{{ actif.amortissement }}</td>
                                                <td style="">{{ actif.net}}</td> 
                                            {% endif %}
                                            
                                             
                                                
                                                <td>
                                                    <a href="{{ path('app_actif_edite',{'id': actif.id})}}" class='btn btn-primary' id='modification'><i class='fas fa-pencil-alt '></i></a>
                                                    <a href="{{ path('app_actif_delete',{'id': actif.id})}}" class='btn btn-danger' onclick='return confirm(\"Êtes-vous sûr de supprimer cette ligne ?\");'><i class='fas fa-trash-alt'></i></a>
                                                </td> 
                                                <td></td>        
                                            </tr>
                                        {% endfor %} 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ 'now' | date("Y")}} </span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="{{ asset('js/bilan/actif.js')}}"> </script>

</body>
</html>
{% endblock %}