{% extends 'base.html.twig' %}

{% block title %}Balance{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>
    <style>
        /* CSS personnalisé pour le PDF */
        body { font-family: Arial, sans-serif; }
        .header { color: #333; }
        table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        }
        @Page {
                    footer {
                       position: fixed;
                        bottom: 0cm;
                        left: 0cm;
                        right: 0cm;
                        height: 2cm;
                        text-align: center;
                    }
                }
    </style>

    <!-- Custom fonts for this template -->
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        
                        
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="tableactif" width="100%" cellspacing="0" data-page-length='50' >
                                    <thead>
                                        <tr>
                                            <th>Classe</th>
                                            <th>Compte</th>
                                            <th>Intitulé du compte</th>
                                            <th>Solde initial Débit</th>
                                            <th>Solde initial Crédit</th>
                                            <th>Mouvements Débit</th>
                                            <th>Mouvements Crédit</th>
                                            <th>Solde final Débit</th>
                                            <th>Solde final Crédit</th>
                                            <th>Solde global</th>
                                            
                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        {% for balance in balances %}
                                            <tr> 
                                                <td style="">{{ balance.Classe }}</td>
                                                <td style="">{{ balance.Compte}}</td>
                                                <td style="">{{ balance.intitule}}</td>
                                                <td style="">{{ balance.SoldeInitialDebit}}</td> 
                                                <td style="">{{ balance.SoldeInitialCredit}}</td>
                                                <td style="">{{ balance.MouvementDebit}}</td>
                                                <td style="">{{ balance.MouvementCredit}}</td>
                                                <td style="">{{ balance.SoldeFinalDebit}}</td>
                                                <td style="">{{ balance.SoldFinalCredit}}</td>
                                                <td style="">{{ balance.SoldeGlobal}}</td>
                                                       
                                            </tr>
                                        {% endfor %} 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ 'now' | date("Y")}} </span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

</body>
</html>
{% endblock %}