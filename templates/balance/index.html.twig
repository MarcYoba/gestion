{% extends 'base.html.twig' %}

{% block title %}Balance{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>AB COMPTA</title>

    <!-- Custom fonts for this template-->
    <style>
        .drop{
            display: none;
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbar.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800"> Balance</h1>
                    <hr>
                    <!-- Content Row -->
                    <div class="row">

                        <div class="col-xl-12 col-lg-10">

                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Constitution Balance</h6>
                                </div>
                                {% for message in app.flashes('success') %}
                                        <div class="alert alert-success alert-dismissible fade show">
                                            {{ message }}
                                        </div>
                                    {% endfor %}

                                    {% for message in app.flashes('warning') %}
                                        <div class="alert alert-warning">
                                            {{ message }}
                                        </div>
                                    {% endfor %}

                                    {% for message in app.flashes('error') %}
                                        <div class="alert alert-danger">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                <br>
                                <div class="form-group row">
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        {% for tempagence in app.user.tempAgences %}
                                            <a href="{{ path('app_home_dashboard', {'id': id}) }}" class="btn btn-primary btn-user btn-block">
                                                <i class="fas fa-home"></i>
                                                home
                                            </a>  
                                        {% endfor %}
                                    </div>
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        <a href="{{ path('app_balance_list') }}" class="btn btn-success btn-user btn-block">
                                            <i class="fas fa-list"></i>
                                            List
                                        </a>
                                    </div>
                                </div>
                                {{ form_start(form) }}
                                
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        {{ form_widget(form.intitulel)}}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget (form.createtAt)}}
                                    </div>
                                </div>
                                <hr>
                                <button type="submit"  class="btn btn-primary btn-user btn-block">
                                    Enregistrer
                                </button>
                                {{ form_end(form) }}
                            </div> 
                        </div>

                        <!-- Donut Chart -->
                    </div> 
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span></span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Page level plugins -->
</body>

</html>
{% endblock %}