{% extends 'base.html.twig' %}

{% block title %}Immobilisation{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>
    <style>
        /* CSS personnalisé pour le PDF */
        body { font-family: Arial, sans-serif; }
        .header { color: #333; }
        table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        }
        @Page {
                    footer {
                       position: fixed;
                        bottom: 0cm;
                        left: 0cm;
                        right: 0cm;
                        height: 2cm;
                        text-align: center;
                    }
                }
    </style>

    <!-- Custom fonts for this template -->
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Immobilisation</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Structure de Immobilisation</h6>
                            <br>
                            
                        </div>
                        
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="tableactif" width="100%" cellspacing="0" data-page-length='50' >
                                    <thead>
                                        <tr>
                                            <th>Classe</th>
                                            <th>Compte</th>
                                            <th>ibellé de l'immobilisation</th>
                                            <th>Date d’acquisition</th>
                                            <th>Prix d’acquisition</th>
                                            <th>Cumul amortissement N-1</th>
                                            <th>Dotation N</th>
                                            <th>Cessions / Sorties</th>
                                            <th>Amortissement cumulé N</th>
                                            <th>Valeur nette comptable N</th>
                                            <th>Operation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for immobilisation in immobilisations %}
                                            <tr> 
                                                <td style="">{{ immobilisation.Classe }}</td>
                                                <td style="">{{ immobilisation.Compte}}</td>
                                                <td style="">{{ immobilisation.libelle}}</td>
                                                <td style="">{{ immobilisation.DateAcquisition | date("Y-m-d")}}</td> 
                                                <td style="">{{ immobilisation.PrixAcquisition}}</td>
                                                <td style="">{{ immobilisation.CumulN1}}</td>
                                                <td style="">{{ immobilisation.DotationN}}</td>
                                                <td style="">{{ immobilisation.CessionsSorties}}</td>
                                                <td style="">{{ immobilisation.CumulN}}</td>
                                                <td style="">{{ immobilisation.ValeurNetN}}</td>
                                                        
                                            </tr>
                                        {% endfor %} 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ 'now' | date("Y")}} </span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

</body>
</html>
{% endblock %}