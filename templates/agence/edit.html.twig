{% extends 'base.html.twig' %}

{% block title %}Creation Agence !{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="shortcut icon" href="assets/img/ico/favicon.png">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Creation Agence</title>
    <style>
        .drop{
            display: none;
        }
    </style>

</head>

<body class="bg-gradient-success">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-2 d-none d-lg-block bg-register-image">
                        {% include "navbar.html.twig" %}
                    </div>
                    <div class="col-lg-10">
                        <div class="p-5">
                            <div class="card-header py-3">
                                <h1 class="m-0 font-weight-bold text-primary">Edition d'Agence </h1>
                            </div><br>
                            <form class="user" action="{{path('update_agence')}}" method="post" enctype="multipart/form-data">  
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        Nom agences
                                        <input type="text" name="agences[{{ agences.id }}][nom]" 
                                            value="{{ agences.nom }}" class="form-control">
                                    </div>        
                                    <div class="col-sm-6">
                                        Localisation
                                        <input type="text" name="agences[{{ agences.id }}][adress]" 
                                            value="{{ agences.adress }}" class="form-control">
                                    </div>        
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        Activit√© de la structure
                                        <input type="text" name="agences[{{ agences.id }}][activite]" 
                                            value="{{ agences.activite }}" class="form-control">
                                    </div>        
                                    <div class="col-sm-6">
                                        Numero Contribuable
                                        <input type="text" name="agences[{{ agences.id }}][contribuable]" 
                                            value="{{ agences.contribuable }}" step="0.01" class="form-control">
                                    </div>        
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        Numero RCCM
                                        <input type="text" name="agences[{{ agences.id }}][rccm]" 
                                            value="{{ agences.rccm }}" step="0.01" class="form-control">
                                    </div>        
                                    <div class="col-sm-6">
                                        Numero Telephone
                                        <input type="text" name="agences[{{ agences.id }}][telephone]" 
                                            value="{{ agences.telephone }}" step="0.01" class="form-control">
                                    </div>        
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        Presentation
                                        <input type="text" name="agences[{{ agences.id }}][presentation]" 
                                            value="{{ agences.presentation }}" step="0.01" class="form-control">
                                    </div>               
                                </div>
                                <button type="submit" name="create" id="create" class="btn btn-primary btn-user btn-block">
                                    Enregistrer
                                </button>
                                <hr>
                            </form>   
                            
                            <hr>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
</body>

</html>        
    
{% endblock %}

