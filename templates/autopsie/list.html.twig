{% extends 'base.html.twig' %}

{% block title %}Consultation!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Gestion de stock</title>

    <!-- Custom fonts for this template -->

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbarA.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">List Autopsie</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-success">Liste des Autopsies</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-page-length='25' data-order='[[0, "desc"]]'>
                                    <thead>
                                       
                                        <tr>
                                            <th>Id</th>
                                            <th>Client</th>
                                            <th>telephone</th>
                                            <th>Age</th>
                                            <th>Espece</th>
                                            <th>Mortalite</th>
                                            <th>Dianostique</th>
                                            <th>Date</th>
                                            <th>Operation</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Client</th>
                                            <th>telephone</th>
                                            <th>Age</th>
                                            <th>Espece</th>
                                            <th>Mortalite</th>
                                            <th>Dianostique</th>
                                            <th>Date</th>
                                            <th>Operation</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% for autopsie in autopsies %}
                                            <tr>
                                                <td>{{autopsie.id}}</td>
                                                <td>{{autopsie.client.nom}}</td>
                                                <td>{{autopsie.client.telephone}}</td>
                                                <td>{{autopsie.age}}</td>
                                                <td>{{autopsie.espece}}</td>
                                                <td>{{autopsie.mortalite}}</td>
                                                <td>{{autopsie.diagnostic}}</td>
                                                <td>{{autopsie.dateautopsie | date("Y-m-d")}}</td>
                                                <td>
                                        
                                                <a href="{{ path('app_autopsie_edite',{'id': autopsie.id})}}" class='btn btn-primary'><i class='fas fa-pencil-alt'></i></a>
                                                <a href="{{ path('app_autopsie_delete',{'id':autopsie.id})}}" class='btn btn-danger' onclick='return confirm(\"Êtes-vous sûr de vouloir supprimer ce Vaccin ?\");'><i class='fas fa-trash-alt'></i></a>
                                                <a href="{{ path('app_autopsie_detailes',{'id':autopsie.id})}}" class='btn btn-primary'><i class='fas fa-bars'></i></a>
                                                
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{"now" | date("Y-m-d")}}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Bootstrap core JavaScript-->
    

</body>

</html>
{% endblock %}