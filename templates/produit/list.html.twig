{% extends 'base.html.twig' %}

{% block title %}List{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Gestion de stock</title>

    <!-- Custom fonts for this template -->
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbar.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Produit</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="form-group row">
                                    <div class="col-sm-8 ">
                                    <h6 class="m-0 font-weight-bold text-primary">Tables Produit</h6>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <a class="m-0 font-weight-bold  btn btn-primary" href="{{ path('app_produit') }}">
                                            <i class="fas fa-plus"></i>
                                            Ajout
                                        </a>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <a class="m-0 font-weight-bold  btn btn-primary" href="../pdf/getproduit.php">telecharger</a>
                                    </div>
                                </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-page-length='25' data-order='[[0, "desc"]]'>
                                    <thead>
                                       
                                        <tr>
                                            <th>id</th>
                                            <th>Nom</th>
                                            <th>Prix vente</th>
                                            <th>Prix achat</th>
                                            <th>Quantite</th>
                                            <th>Date</th>
                                            <th>operation</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>id</th>
                                            <th>Nom</th>
                                            <th>Prix vente</th>
                                            <th>Prix achat</th>
                                            <th>Quantite</th>
                                            <th>Date</th>
                                            <th>operation1</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% if is_granted('ROLE_ADMIN_ADMIN') %}
                                            {% for produit in produits %}
                                                    <tr>
                                                        <td>{{ produit.id }}</td>
                                                        <td>{{ produit.nom }}</td>
                                                        <td>{{ produit.prixvente }}</td>
                                                        <td>{{ produit.prixachat }}</td>
                                                        <td>{{ produit.quantite }}</td>
                                                        <td>{{ produit.createdAt|date("d-m-Y") }}</td>
                                                        <td>
                                                            <a href="{{ path('produit_edit', {'id': produit.id}) }}" class='btn btn-primary'>
                                                                <i class='fas fa-pencil-alt'></i></a>
                                                            <a href="{{ path('produit_delete', {'id': produit.id}) }}" class='btn btn-danger' onclick='return confirm("Êtes-vous sûr de vouloir supprimer ce produit ?");'>
                                                                <i class='fas fa-trash-alt'></i></a>
                                                        </td> 
                                                    </tr>
                                            {% endfor %}
                                        {% else %}
                                            {% for produit in produits %}
                                                {% if produit.agence.id == app.user.employer.agence.id %}
                                                    <tr>
                                                        <td>{{ produit.id }}</td>
                                                        <td>{{ produit.nom }}</td>
                                                        <td>{{ produit.prixvente }}</td>
                                                        <td>{{ produit.prixachat }}</td>
                                                        <td>{{ produit.quantite }}</td>
                                                        <td>{{ produit.createdAt|date("d-m-Y") }}</td>
                                                        {% if "ROLE_ADMIN_ADMIN" in app.user.roles %}
                                                        <td>
                                                            <a href="{{ path('produit_edit', {'id': produit.id}) }}" class='btn btn-primary'>
                                                                <i class='fas fa-pencil-alt'></i></a>
                                                            <a href="{{ path('produit_delete', {'id': produit.id}) }}" class='btn btn-danger' onclick='return confirm("Êtes-vous sûr de vouloir supprimer ce produit ?");'>
                                                                <i class='fas fa-trash-alt'></i></a>
                                                        </td>
                                                        {% else %}
                                                        <td></td>
                                                        {% endif %}
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                        
                                        {% endif %}
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span> Production : {{ "now"|date("d-m-Y") }}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    

    <!-- Bootstrap core JavaScript-->

</body>

</html>
{% endblock %}