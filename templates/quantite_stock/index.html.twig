<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbar.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Quantité en Stock</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="form-group row">
                                <div class="col-sm-6">
                                <h6 class="m-0 font-weight-bold text-primary">Quantité en Stock</h6>
                                </div>
                                <div class="col-sm-2">
                                    <a href="../../home.php" class="btn btn-primary">
                                    <i class="fa fa-home"></i>
                                    Home
                                    </a> 
                                </div>
                                <div class="col-sm-2">
                                    <label for="annee">récherché par Année</label>
                                    <select class="form-control" id="annee" onchange="reload()">
                                        {% for currentYear in 2022..2040 %}
                                            <option value="{{ currentYear }}"> {{ currentYear }} </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-sm-2">
                                    <span id="quantitetotale" onclick="QuantiteTotal()" class="btn btn-warning"> Calculer Quantité Totale</span>
                                </div>  
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-page-length='25' data-order='[[0, "desc"]]'>
                                    <thead>
                                       
                                        <tr>
                                            <th> Nom produit</th>
                                            <th>Stock du (02/01/<?php echo $_GET["date"]; ?>)</th>
                                            <th>Quantité Achetée</th>
                                            <th>Quantité Facturée</th>
                                            <th>Quantité en Stock</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Nom produit</th>
                                            <th>Stock du (02/01/<?php echo $_GET["date"]; ?>)</th>
                                            <th>Quantité Achetée</th>
                                            <th>Quantité Facturée</th>
                                            <th>Quantité en Stock</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                    {% set total = 0 %}
                                        {% for quantite in quantitestock %}
                                            <tr>
                                                <td>{{quantite[0]}}</td>
                                                <td>{{quantite[1]}}</td>
                                                <td>{{quantite[2]}}</td>
                                                <td>{{quantite[3]}}</td>
                                                <td :style="{ color: (quantite[1] + quantite[2] - quantite[3] <= 0) ? 'red' : 'green' }">
                                                    {{ quantite[1] + quantite[2] - quantite[3] }}
                                                </td>
                                            </tr>
                                            {% set total = quantite[1] + quantite[2] - quantite[3] %}
                                        {% endfor %}
                                    </tbody>
                                </table>
                                <span style="font-weight: bold;" class="btn btn-primary" id="total" > Quantite Total {{ total }} </span>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
