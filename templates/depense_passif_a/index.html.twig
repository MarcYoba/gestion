{% extends 'base.html.twig' %}

{% block title %}Hello DepensePassifController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template-->
    <style>
        .drop{
            display: none;
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbarA.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800"> Passif du bilan</h1>
                    <hr>
                    <!-- Content Row -->
                    <div class="row">

                        <div class="col-xl-12 col-lg-10">

                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <div class=" form-group row">
                                        <div class="col-md-2" >
                                            <h6 class="m-0 font-weight-bold text-primary">Structure du bilan</h6>
                                        </div>
                                        <div class="col-md-3" >
                                            <a class="btn btn-primary btn-user" href="{{path('app_passif_a_list',{'date':2025})}}">Liste</a>
                                        </div>
                                        <div class="col-md-3" >
                                            <a class="btn btn-primary btn-user" href="{{ path('app_depense_passif_a_list')}}">Liste Depense</a>
                                        </div>
                                    </div>
                                    
                                </div>
                                <br>
                                
                            {{ form_start(form)}}
                                
                                <div class="form-group row">
                                    <div class="col-sm-3">
                                        Montant
                                        {{form_widget(form.montant)}}
                                    </div>
                                    <div class="col-sm-3">
                                        Recherche l'elements
                                        <input type="text" class="form-control form-control-user"
                                           name="recherche" id="recherche" placeholder="Recherche valeur" onkeyup="recherchepassif()" >
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        Selectionner l'element avec la bonne date
                                        <select id="groupe"  name="groupe"  class="form-control form-select" size="3" required>
                                            {% for passif in passifs %}
                                                <option value="{{passif.ref}}">{{passif.libelle}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        Motif de la depense
                                        {{ form_widget(form.libelle)}}
                                    </div>
                                    <div class="col-sm-6">
                                        date de l'exercice
                                        {{ form_widget(form.createtAt)}}
                                    </div>
                                </div>
                                <hr> 
                                <button type="submit" name="update" id="update" class="btn btn-primary btn-user btn-block">
                                    Enregistrer
                                </button>
                                
                        {{ form_end(form)}}

                            </div>

                        </div>

                        <!-- Donut Chart -->
                    </div> 
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ 'now' | date("Y-m-d")}} </span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <script>
    function recherchepassif() {
        // Récupérer l'input et la liste déroulante
        var input, filter, ul, li, a, i;
        input = document.getElementById("recherche");
        filter = input.value.toUpperCase();
        ul = document.getElementById("groupe");
        li = ul.getElementsByTagName("option");
        console.log(li.length);
        // Boucler sur toutes les options
        for (i = 0; i < li.length; i++) {
        a = li[i];
        
        if (a.textContent.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
        } else {
            li[i].style.display = "none";
        }
        }
        
    }
    </script>
    <!-- Page level plugins -->
</body>

</html>
{% endblock %}

