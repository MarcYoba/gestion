{% extends 'base.html.twig' %}

{% block title %}Hello rowController!{% endblock %}

{% block body %}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>gestion de stock</title>

    <!-- Custom fonts for this template -->

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbarA.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">AChat</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Tables Achat</h6>

                            
                            <form  action="{{ path('achat_download_a')}}" method="post" class="user row" >
                                <div class="form-group row">
                                    <p class="col-md-2" >
                                        <input type="date" class="form-control form-control-user"
                                        name="date1" id="date1" placeholder="quantite"><br>
                                        <a href="{{path('achat_a_download')}}" class="btn btn-warning">
                                            <i class="fa fa-download"></i>
                                            EXPORTER</a>
                                    </p>
                                    <p class="col-md-2" >
                                        <input type="date" class="form-control form-control-user"
                                        name="date2" id="date2" placeholder="quantite">
                                    </p>
                                    <p class="col-md-3" >
                                    <input type="text" class="form-control form-control-user" id="produitrecher"
                                        name="produitrecher" placeholder="Nom produit" onkeyup="recherchduproduit()"> 
                                    <select id="nomProduite"  name="nomProduite"   class="form-control form-select" size="4" multiple aria-label="multiple select">   <!--  -->
                                        <option value="ALL" selected>ALL</option>             
                                        {% for produit in produits %}
                                            <option value="{{ produit.id }}">{{ produit.nom }}</option>
                                        {% endfor %}   
                                    </select>
                                    </p>

                                    <p class="col-md-2" >
                                        <input type="submit" class="btn btn-warning btn-user"  value="Affichier" >  
                                    </p>
                                    <p class="col-md-3" >
                                        <a href="{{path('achat_a_import_bond')}}" class="btn btn-info btn-user">
                                            Bon Commande
                                    </a><br>
                                    <label for="annee">Année recherche</label>
                                    <select class="form-control" id="annee" name="annee" onchange="reload()">
                                        
                                    </select>
                                    </p> 
                                     
                                </div>
                            </form>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-page-length='25' data-order='[[0, "desc"]]'>
                                    <thead>
                                       
                                        <tr>
                                            <th>id</th>
                                            <th>Nom</th>
                                            <th>Quantite</th>
                                            <th>Prix</th>
                                            <th>Montant</th>
                                            <th>Type paiement</th>
                                            <th>Date</th>
                                            <th>Operation</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>id</th>
                                            <th>Nom</th>
                                            <th>Quantite</th>
                                            <th>Prix</th>
                                            <th>Montant</th>
                                            <th>Type paiement</th>
                                            <th>Date</th>
                                            <th>Operation</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% for row in achats %}
                                            <tr>                                       
                                                <td>{{ row.id }}</td>
                                                <td>{{ row.produit.nom }}</td>
                                                <td>{{ row.quantite }}</td>
                                                <td>{{ row.prix }}</td>
                                                <td>{{ row.montant }}</td>
                                                <td>{{ row.type}}</td>
                                                <td>{{ row.createdAt|date('Y-m-d') }}</td>  
                                                    <td>
                                                        <a href='{{path('app_achat_edit_a',{'id':row.id})}}' class='btn btn-primary' id='modification'><i class='fas fa-pencil-alt '></i></a>
                                                        <a href='{{path('app_achat_delete_a', {'id' :row.id})}}' class='btn btn-danger' onclick='return confirm("Êtes-vous sûr de vouloir supprimer cet row ? si vous suprimer cet row elle sera supprimer du stock");' id='suppresioner'><i class='fas fa-trash-alt'></i></a>
                                                        <a href='{{path('achat_a_view',{'id':row.id})}}' class='btn btn-primary' id='modification'><i class='far fa-file-image'></i></a>
                                                    </td>
                                            </tr> 
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span> Production &copy; {{ "now"|date('m-d-y') }}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->

    <script src="{{asset('js/produit/recherche.js')}}"></script>
   

</body>

</html>
{% endblock %}