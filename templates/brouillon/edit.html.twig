{% extends 'base.html.twig' %}

{% block title %}Brouillon{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Gestion de stock</title>
</head>

<body id="page-top">
    <div id="wrapper">
        {% include "navbar.html.twig" %}
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">

                {% include "topbar.html.twig" %}
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Table des brouillons</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                        <div class="form-group row">
                                <div class="col-sm-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Tables des brouillon</h6>
                                </div>
                                <div class="col-sm-2">
                                    {% for tempagence in app.user.tempAgences %}
                                        <a href="{{ path('app_home_dashboard', {'id': tempagence.agence.id}) }}" class="btn btn-primary btn-user btn-block">
                                            <i class="fas fa-home"></i>
                                            home
                                        </a>  
                                    {% endfor %}
                                </div>
                                <div class="col-sm-2">
                                    <a href="{{path('app_brouillon')}}" class="btn btn-warning btn-user btn-block">
                                        <i class="fas fa-plus"></i> Ajouter
                                    </a>
                                </div>
                                <div class="col-sm-2">
                                    <a href="{{path('app_brouillon_list')}}" class="btn btn-primary btn-user btn-block">
                                        <i class="fas fa-list"></i> list
                                    </a>
                                </div>
                                <div class="col-sm-2">
                                    <button onclick="getVenteData({{id}})" class="btn btn-primary btn-user btn-block">
                                        <i class="fas fa-pencil-alt"></i> Terminer
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="6" width="100%" cellspacing="0" data-page-length='25' data-order='[[0, "desc"]]'>
                                    <thead>
                                        <tr>
                                            <th>id</th>
                                            <th>Client</th>
                                            <th>Produit</th>
                                            <th>Quantite</th>
                                            <th>Prix</th>
                                            <th>Montant</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>id</th>
                                            <th>Client</th>
                                            <th>Produit</th>
                                            <th>Quantite</th>
                                            <th>Prix</th>
                                            <th>Montant</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% for brouillon in brouillons %}
                                            <tr>
                                                <td>{{brouillon.id}}</td>
                                                <td>{{brouillon.client.nom}}</td>
                                                <td>{{brouillon.produit.nom}}</td>
                                                <td>{{brouillon.quantite}}</td>
                                                <td>{{brouillon.prix}}</td>
                                                <td>{{brouillon.montant}}</td>
                                                <td>{{brouillon.createtAt | date('Y-m-d')}}</td>
                                                <td>{{brouillon.statut}}</td>
                                            </tr>
                                        {% endfor %}
                                         
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ 'now' | date('Y-m-d')}}</span>
                    </div>
                </div>
            </footer>
        </div>
        
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <script src="{{ asset('js/brouillon/brouillon.js') }}"></script>
</body>
</html>
{% endblock %}