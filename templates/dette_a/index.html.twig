{% extends 'base.html.twig' %}

{% block title %}Dette{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Gestion de stock</title>

    <!-- Custom fonts for this template -->
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbarA.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Créance client</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="form-group row">
                                    <div class="col-sm-8 ">
                                    <h6 class="m-0 font-weight-bold text-primary">Créance client</h6>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <a class="m-0 font-weight-bold  btn btn-primary" href="{{ path('app_vente_a') }}">
                                            <i class="fas fa-plus"></i>
                                            Ajout
                                        </a>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <a class="m-0 font-weight-bold  btn btn-primary" href="{{path('vente_a_list')}}">
                                            List
                                            <i class="fas fa-list"></i>
                                        </a>
                                    </div>
                                </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-page-length='25' data-order='[[0, "desc"]]'>
                                    <thead>
                                       
                                        <tr>
                                            <th>id</th>
                                            <th>Nom client</th>
                                            <th>Quantité</th>
                                            <th>Prix </th>
                                            <th>Date</th>
                                            <th>Opération</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>id</th>
                                            <th>Nom client</th>
                                            <th>Quantité</th>
                                            <th>Prix </th>
                                            <th>Date</th>
                                            <th>Opération</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% for dette in dettes %}
                                            <tr>
                                                <td>{{ dette.id }}</td>
                                                <td>{{ dette.client.nom  }}</td>
                                                <td>{{ dette.quantite }}</td>
                                                <td>{{ dette.prix }}</td>
                                                <td>{{ dette.createAt | date("Y-m-d") }}</td>
                                                <td>
                                                    <a href="{{ path('app_versement_a') }}" class='btn btn-primary'>
                                                       versement </a>
                                                </td> 
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span> Production : {{ "now"|date("d-m-Y") }}</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
</body>
</html>
{% endblock %}
