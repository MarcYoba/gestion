{% extends 'base.html.twig' %}

{% block title %}Hello EmployerController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template-->
    
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    
    <style>
        .drop{
            display: none;
        }
    </style>

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <h1 class="h4 text-gray-900 mb-4">Enregistrement Employer</h1>
                                    </div>
                                    <div class="col-sm-2">
                                        <a  href="{{ path('app_agence') }}" class="btn btn-primary btn-user btn-block"> Retour</a>
                                    </div>
                                </div>
                            </div>
                            {{ form_errors(form) }}
                            {{ form_start(form) }}
                            
                            <form class="user"  method="post" action="app_employer">
                                <div class="form-group row">
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        {{ form_row(form.createdAt) }} 
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.user) }}<br>
                                            <select name="{{ field_name(form.user) }}" >
                                                {% for user in form.user.vars.choices %}
                                                    <option value="{{ user.value }}" {{ form.user.vars.data and user.value == form.user.vars.data.id ? 'selected' }}>
                                                        {{ user.data.username }} {# Affiche le nom de l'utilisateur #}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        {{ form_errors(form.user) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    
                                    <div class="col-sm-6">
                                        {{ form_label(form.agence) }}<br>
                                            <select name="{{ field_name(form.agence) }}" >
                                                {% for agence in form.agence.vars.choices %}
                                                    <option value="{{ agence.value }}" {{ form.agence.vars.data and agence.value == form.agence.vars.data.id ? 'selected' }}>
                                                        {{ agence.data.nom }} {# Affiche le nom de l'agence #}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        {{ form_errors(form.agence) }}
                                    </div>
                                    
                                </div>
                                <hr>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <button type="submit"  class="btn btn-primary btn-user btn-block">
                                    Enregistrer un nouveau employer
                                </button>
                                </span>
                            </form>
                            {{ form_end(form) }}
                            <hr>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->

</body>
</html>
{% endblock %}
