{% extends 'base.html.twig' %}

{% block title %}Inventaire{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>AB COMPTA</title>

    <!-- Custom fonts for this template-->
    <style>
        .drop{
            display: none;
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbar.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Edite Inventaire</h1>
                    <hr>
                    <!-- Content Row -->
                    <div class="row">

                        <div class="col-xl-12 col-lg-10">

                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    
                                
                                    <div class="form-group row">
                                        <div class="col-sm-3 mb-3 mb-sm-0">
                                            <div class="card-header py-3">
                                                <h6 class="m-0 font-weight-bold text-primary">Edite Inventaire</h6>
                                            </div>
                                        </div>

                                        <div class="col-sm-2 mb-3 mb-sm-0">
                                            {% for tempagence in app.user.tempAgences %}
                                                <a href="{{ path('app_home_dashboard', {'id': id}) }}" class="btn btn-primary btn-user btn-block">
                                                    <i class="fas fa-home"></i>
                                                    home
                                                </a>  
                                            {% endfor %}
                                        </div>
                                        <div class="col-sm-2 mb-3 mb-sm-0">
                                            <a href="{{ path('app_inventaire_a_list') }}" class="btn btn-success btn-user btn-block">
                                                <i class="fas fa-list"></i>
                                                List
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                
                            <form class="user" action="{{path('app_inventaire_a_update')}}" method="post" enctype="multipart/form-data">    
                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        Date
                                        <input type="text" name="inventaires[{{ inventaires.id }}][date]" 
                                            value="{{ inventaires.createtAt | date('Y-m-d') }}" class="form-control" id="inventaire_a_createtAt">
                                    </div>        
                                    <div class="col-sm-6">
                                        Produit
                                        <select name="inventaires[{{ inventaires.id }}][produit]" class="form-control" id="inventaire_a_produit" onclick="recherchequantite()">
                                            <option value="{{ inventaires.produit.id }}">{{ inventaires.produit.nom }}</option>
                                            {% for produit in produits %}
                                                {% if inventaires.produit.nom != produit.nom %}
                                                    <option value="{{ produit.id }}">{{ produit.nom }}</option>
                                                {% endif %}
                                            {% endfor %}
                                        </select>
                                    </div>        
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-3">
                                        Quantite
                                        <input type="text" name="inventaires[{{ inventaires.id }}][quantite]" 
                                            value="{{ inventaires.quantite }}" class="form-control" id="inventaire_a_quantite" readonly>
                                    </div>        
                                    <div class="col-sm-3">
                                        Inventaire finale
                                        <input type="number" name="inventaires[{{ inventaires.id }}][inventaire]" 
                                            value="{{ inventaires.inventaire }}" step="0.01" class="form-control" id="inventaire_a_inventaire" >
                                    </div> 
                                    <div class="col-sm-3">
                                        Inventaire finale
                                        <input type="number" name="inventaires[{{ inventaires.id }}][ecart]" 
                                            value="{{ inventaires.ecart }}" step="0.01" class="form-control" readonly id="inventaire_a_ecart" >
                                    </div>        
                                </div>
                                
                                <hr>
                                <button type="submit"  class="btn btn-primary btn-user btn-block">
                                    Enregistrer
                                </button>
                            </form>   
                            </div> 
                        </div>

                        <!-- Donut Chart -->
                    </div> 
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ "now" | date("Y-m-d")}}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <script src="{{ asset('js/inventaire/inventaire.js') }}"></script>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Page level plugins -->
</body>

</html>
{% endblock %}