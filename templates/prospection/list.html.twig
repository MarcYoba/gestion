{% extends 'base.html.twig' %}

{% block title %}Hello ProspectionController!{% endblock %}

{% block body %}
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Gestion de stock</title>

    <!-- Custom fonts for this template -->

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {% include "navbar.html.twig" %}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {% include "topbar.html.twig" %}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Produit</h1>
                    <p class="mb-4">

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="form-group row">
                                    <div class="col-sm-6 ">
                                    <h6 class="m-0 font-weight-bold text-primary">Tables des Produits</h6>
                                    </div>
                                    <div class="col-sm-2">
                                    <i class="fa fa-home"></i>
                                    <a href="{{ path('app_home_dashboard', {'id': id}) }}" class="btn btn-primary">Home</a> 
                                </div>
                                <div class="col-sm-2">
                                    <i class="fa fa-plus"></i> 
                                    <a href="{{path('app_prospection')}}" class="btn btn-success"> Ajouter</a>
                                    
                                </div>
                                <div class="col-sm-2 ">
                                    <a class="m-0 font-weight-bold text-primary" href="#">télécharger</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-page-length='25' data-order='[[0, "desc"]]'>
                                    <thead>
                                       
                                        <tr>
                                            <th>id</th>
                                            <th>Nom</th>
                                            <th>Téléphone</th>
                                            <th>Localisation</th>
                                            <th>Spéculation</th>
                                            <th>Date</th>
                                            
                                            <th>opération</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>id</th>
                                            <th>Nom</th>
                                            <th>Téléphone</th>
                                            <th>Localisation</th>
                                            <th>Spéculation</th>
                                            <th>Date</th>
                                            
                                            <th>opération</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% for prospection in prospections %}
                                            <tr>
                                                <td>{{prospection.id}}</td>
                                                <td>{{prospection.nom}}</td>
                                                <td>{{prospection.telephone}}</td>
                                                <td>{{prospection.localisation}}</td>
                                                <td>{{prospection.speculation}}</td>
                                                <td>{{prospection.createtAt | date("Y-m-d")}}</td>
                                                <td>
                                                    <a class='btn btn-primary' href='{{path('app_propection_edit',{'id':prospection.id})}}'><i class='fas fa-pencil-alt'></i></a>
                                                    <a href='{{path('app_propection_delete',{'id':prospection.id}) }}' class='btn btn-danger' onclick='return confirm(\"Êtes-vous sûr de vouloir supprimer cette Prospection ?\");'><i class='fas fa-trash-alt'></i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Production &copy; {{ "now" | date("Y")}}</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->

    <!-- Bootstrap core JavaScript-->
</body>

</html>
{% endblock %}