{% extends 'base.html.twig' %}

{% block title %}Hello ProduitAController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-success">

    <div class="container" >
        
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class=" form-group row">
                    <div class="col-lg-2 d-none d-lg-block bg-register-image">
                        {% include "navbarA.html.twig" %}
                    </div>
                    <div class="col-lg-10">
                        <div class="p-5">
                            <div class="card-header py-3">
                                <div class="form-group row">
                                    <div class="col-sm-8 mb-3 mb-sm-0">
                                        Enregistrer un Produit
                                    </div>
                                    {% for message in app.flashes('success') %}
                                        <div class="alert alert-success alert-dismissible fade show">
                                            {{ message }}
                                        </div>
                                    {% endfor %}

                                    {% for message in app.flashes('warning') %}
                                        <div class="alert alert-warning">
                                            {{ message }}
                                        </div>
                                    {% endfor %}

                                    {% for message in app.flashes('error') %}
                                        <div class="alert alert-danger">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        {% for tempagence in app.user.tempAgences %}
                                            <a href="{{ path('app_home_dashboardA', {'id': tempagence.agence.id}) }}" class="btn btn-primary btn-user btn-block">
                                                <i class="fas fa-home"></i>
                                                home
                                            </a>  
                                        {% endfor %}
                                    </div>
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        <a href="{{ path('produit_a_list') }}" class="btn btn-success btn-user btn-block">
                                            <i class="fas fa-list"></i>
                                            List
                                        </a>
                                    </div>      
                                </div> 
                            </div>
                            <br><br>
                            <form class="user" action="{{path('app_produit_a_import')}}" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="file" class="form-control form-control-user" id="ficher"
                                            name="ficher" required>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="submit" class="form-control form-control-user btn btn-success" placeholder="Telecharger" >
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

</html>
{% endblock %}
